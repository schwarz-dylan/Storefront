@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()"> <i class="fas fa-user-alt mr-1 text-gray"></i>Log off</a></li>
    }
}
else
{
    <li class="nav-item"><a class="nav-link" href="@Url.Action("Login","Account")"> <i class="fas fa-user-alt mr-1 text-gray"></i>Login</a></li>
}
